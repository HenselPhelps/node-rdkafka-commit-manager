  "repository": {
    "type": "git",
    "url": "git+https://github.com/HenselPhelps/node-rdkafka-commit-manager.git"
  },
  "author": "Hensel Phelps",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HenselPhelps/node-rdkafka-commit-manager/issues"
  },
  "homepage": "https://github.com/HenselPhelps/node-rdkafka-commit-manager#readme",
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.3",
    "coveralls": "^3.0.7",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
